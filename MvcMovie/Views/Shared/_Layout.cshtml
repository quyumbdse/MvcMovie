<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Big Movie Bazar</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/normalize.css" rel="stylesheet" />
    <link href="~/Content/themes/base/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/themes/base/kendo.default.min.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,400,700' rel='stylesheet' type='text/css'>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

    <script type="text/javascript">
          @* This is used for virtual directories since javascript has problems with it *@
        var baseUrl = '@Url.Content("~").TrimEnd('/')';

    </script>
</head>
<body>
    <div id="wrapper">
        <header>
            
            <div class="container">
                <h1><a href=@Url.Content("~/")> Music Bazar</a></h1>
                <nav>
                    <ul id="menu" data-role="menu" class="k-widget k-reset k-header k-menu k-menu-horizontal" style="opacity:0;">
                        <li class="k-item k-state-default k-first">
                            Genres
                            <ul style="display:none;">
                                @{Html.ActionLink("GenreMenu", "Store");}
                            </ul>
                        </li>
                       <li class="k-item k-state-default">
                            About
                            <ul style="display:none;">
                                <li>
                                    <div class="k-content menu-content">
                                        <img src="~/Images/logo1.png" />
                                    </div>
                                </li>
                            </ul>
                           
                           <ul style="display:none;">
                               <li>
                                   <div class="k-content menu-content">
                                       <img src="~/Images/logo1.png" />
                                   </div>
                               </li>
                           </ul>
                        </li>
                        
                        <li class="k-item k-state-default">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "k-link" })</li>
                    </ul>
                </nav>
            </div>
            
        </header>
        <div id="body" style="opacity:0;">
            @RenderBody()
        </div>
    </div>
    <footer>
        <section class="container">
            <ul>
                &copy; @DateTime.Now.Year - Big Movie Bazar
            </ul>
        </section>
    </footer>

    @Html.Partial("_AlbumDetailsTemplatePartial")
    @Html.Partial("_SearchResultTemplatePartial")

    <script src="http://cdn.kendostatic.com/2014.3.1119/js/kendo.all.min.js"></script>
    @Scripts.Render("~/bundles/libs")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
    
    <script>
        //FOUJUI FIX - Reveal body after UI initilization completes
        $("#body").css("opacity", 1);
    </script>
</body>
</html>
